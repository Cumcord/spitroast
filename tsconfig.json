{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "module": "ESNext",
    "moduleResolution": "node",
    "plugins": [
      {
        "transform": "./transform-extensions.ts",
        "after": true
      }
    ]
  }
}
