{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "module": "ESNext",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  }
}
